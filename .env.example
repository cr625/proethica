# CLAUDE_EMBEDDING_MODEL=claude-3-embedding-3-0
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Zotero API credentials
ZOTERO_API_KEY=4XUR9fOPTyPOe9hYP6Obj1gh
ZOTERO_USER_ID=2419920
