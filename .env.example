# Flask configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-replace-in-production

# Database configuration
DATABASE_URL=postgresql://postgres:PASS@localhost:5433/ai_ethical_dm

# LLM configuration
OPENAI_API_KEY=your-openai-api-key-here
# API key for Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
USE_CLAUDE=true
USE_AGENT_ORCHESTRATOR=true

# Model configuration (new Claude models available: Opus 4 and Sonnet 4)
# See https://docs.anthropic.com/en/docs/about-claude/models/overview
CLAUDE_DEFAULT_MODEL=claude-sonnet-4-20250514
CLAUDE_FAST_MODEL=claude-sonnet-4-20250514
CLAUDE_POWERFUL_MODEL=claude-opus-4-20250514
# OpenAI models
OPENAI_CHAT_MODEL=gpt-4
OPENAI_CHAT_FAST_MODEL=gpt-3.5-turbo

# Embedding configuration
EMBEDDING_PROVIDER_PRIORITY=local
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
