# Flask configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-replace-in-production

# Database configuration
DATABASE_URL=postgresql://postgres:PASS@localhost:5432/ai_ethical_dm

# LLM configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
USE_CLAUDE=true
USE_AGENT_ORCHESTRATOR=true

# Embedding configuration
EMBEDDING_PROVIDER_PRIORITY=local,claude,openai
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
CLAUDE_EMBEDDING_MODEL=claude-3-embedding-3-0
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Zotero API credentials
ZOTERO_API_KEY=your-zotero-api-key-here
ZOTERO_USER_ID=your-zotero-user-id-here
# ZOTERO_GROUP_ID=your-zotero-group-id-here  # Uncomment if using a group library

# MCP Server configuration
ENVIRONMENT=development
MCP_SERVER_URL=http://localhost:5001
MCP_SERVER_PORT=5001
USE_MOCK_FALLBACK=true
