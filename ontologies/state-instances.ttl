# State Instances for ProEthica Intermediate Ontology
# Based on Chapter 2.2.4 Literature Review

# Conflict States
:ConflictOfInterestPresent a proeth-core:State ;
    rdfs:label "Conflict of Interest Present"@en ;
    rdfs:comment "State where a professional has personal interests that could influence their professional judgment or decision-making."@en ;
    skos:definition "Environmental state where competing personal and professional interests exist, requiring disclosure and management according to Dennis et al. (2016) context-aware ethical reasoning."@en ;
    proeth:stateCategory "conflict" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Triggers disclosure obligations and potential recusal requirements" ;
    dcterms:source "Dennis et al. 2016 - Context-aware ethical reasoning" .

:CompetingDutiesState a proeth-core:State ;
    rdfs:label "Competing Duties State"@en ;
    rdfs:comment "State where multiple professional obligations conflict and cannot all be fully satisfied simultaneously."@en ;
    skos:definition "Context where role-based obligations generate conflicting requirements, requiring prioritization based on Rao et al. (2023) context-dependent evaluation."@en ;
    proeth:stateCategory "conflict" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Requires ethical prioritization and stakeholder communication" .

# Risk States
:PublicSafetyAtRisk a proeth-core:State ;
    rdfs:label "Public Safety at Risk"@en ;
    rdfs:comment "State where actions or conditions pose potential harm to public health, safety, or welfare."@en ;
    skos:definition "Environmental condition elevating safety obligations and precautionary duties per Berreby et al. (2017) Event Calculus state representation."@en ;
    proeth:stateCategory "risk" ;
    proeth:persistenceType "variable" ;
    proeth:ethicalImpact "Elevates safety obligations above other professional duties" ;
    dcterms:source "Berreby et al. 2017 - Event Calculus for ethical evaluation" .

:EnvironmentalHazardPresent a proeth-core:State ;
    rdfs:label "Environmental Hazard Present"@en ;
    rdfs:comment "State where environmental conditions pose risks requiring professional intervention or mitigation."@en ;
    skos:definition "Risk state requiring immediate assessment and potential action according to Almpani et al. (2023) dynamic priority determination."@en ;
    proeth:stateCategory "risk" ;
    proeth:persistenceType "variable" ;
    proeth:ethicalImpact "Activates environmental protection obligations and reporting duties" .

# Competence States
:OutsideAreaOfCompetence a proeth-core:State ;
    rdfs:label "Outside Area of Competence"@en ;
    rdfs:comment "State where professional lacks the expertise, training, or qualification to perform requested services."@en ;
    skos:definition "Competence boundary state limiting available actions and triggering referral obligations per professional capability assessment."@en ;
    proeth:stateCategory "competence" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Prohibits service provision and requires referral or collaboration" .

:QualifiedToPerform a proeth-core:State ;
    rdfs:label "Qualified to Perform"@en ;
    rdfs:comment "State where professional has demonstrated competence and authorization to perform specific services."@en ;
    skos:definition "Positive competence state enabling professional action within defined scope of practice."@en ;
    proeth:stateCategory "competence" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Enables service provision with associated professional obligations" .

# Relationship States
:ClientRelationshipEstablished a proeth-core:State ;
    rdfs:label "Client Relationship Established"@en ;
    rdfs:comment "State where formal professional-client relationship exists with associated duties and boundaries."@en ;
    skos:definition "Relational state defining applicable duties, confidentiality requirements, and professional boundaries."@en ;
    proeth:stateCategory "relationship" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Activates fiduciary duties and confidentiality obligations" .

:EmploymentTerminated a proeth-core:State ;
    rdfs:label "Employment Terminated"@en ;
    rdfs:comment "State where professional employment relationship has ended but residual obligations may persist."@en ;
    skos:definition "Post-employment state with continuing obligations for confidentiality and non-competition."@en ;
    proeth:stateCategory "relationship" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Maintains certain obligations while releasing others" .

# Information States
:ConfidentialInformationHeld a proeth-core:State ;
    rdfs:label "Confidential Information Held"@en ;
    rdfs:comment "State where professional possesses information subject to confidentiality obligations."@en ;
    skos:definition "Information state triggering protection obligations and limiting disclosure per professional confidentiality requirements."@en ;
    proeth:stateCategory "information" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Restricts information sharing and requires security measures" .

:PublicInformationAvailable a proeth-core:State ;
    rdfs:label "Public Information Available"@en ;
    rdfs:comment "State where relevant information is publicly accessible without confidentiality restrictions."@en ;
    skos:definition "Open information state enabling unrestricted professional use and disclosure."@en ;
    proeth:stateCategory "information" ;
    proeth:persistenceType "variable" ;
    proeth:ethicalImpact "Permits open discussion and use in professional practice" .

# Emergency States
:EmergencySituation a proeth-core:State ;
    rdfs:label "Emergency Situation"@en ;
    rdfs:comment "State requiring immediate response that may override normal procedures and protocols."@en ;
    skos:definition "Critical temporal state with non-inertial urgency per Berreby et al. (2017) momentary condition representation."@en ;
    proeth:stateCategory "emergency" ;
    proeth:persistenceType "non-inertial" ;
    proeth:ethicalImpact "Overrides normal procedures and activates emergency protocols" ;
    dcterms:source "Berreby et al. 2017 - Non-inertial fluents for momentary conditions" .

:CrisisConditions a proeth-core:State ;
    rdfs:label "Crisis Conditions"@en ;
    rdfs:comment "State of systemic disruption requiring coordinated professional response and adapted obligations."@en ;
    skos:definition "Extended emergency state affecting multiple stakeholders and requiring sustained response."@en ;
    proeth:stateCategory "emergency" ;
    proeth:persistenceType "variable" ;
    proeth:ethicalImpact "Modifies standard obligations and enables crisis response measures" .

# Environmental Context States (Domain-specific examples)
:DroughtConditions a proeth-core:State ;
    rdfs:label "Drought Conditions"@en ;
    rdfs:comment "Environmental state of water scarcity affecting professional decisions in water resource management."@en ;
    skos:definition "Domain-specific environmental state transforming water conservation from preference to obligation per Sarmiento et al. (2023) causal state emergence."@en ;
    proeth:stateCategory "environmental" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Elevates conservation obligations and restricts water usage decisions" ;
    dcterms:source "Sarmiento et al. 2023 - States emerging from causal chains" .

:WaterRestrictionsInEffect a proeth-core:State ;
    rdfs:label "Water Restrictions in Effect"@en ;
    rdfs:comment "Regulatory state where water usage is legally restricted or controlled."@en ;
    skos:definition "Legal environmental state constraining professional design and operational decisions."@en ;
    proeth:stateCategory "regulatory" ;
    proeth:persistenceType "inertial" ;
    proeth:ethicalImpact "Legally constrains design options and operational parameters" .