@prefix : <http://proethica.org/ontology/mclaren-extensional#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix proeth: <http://proethica.org/ontology/intermediate#> .
@prefix eneth: <http://proethica.org/ontology/engineering-ethics#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@base <http://proethica.org/ontology/mclaren-extensional> .

<http://proethica.org/ontology/mclaren-extensional> rdf:type owl:Ontology ;
    rdfs:label "McLaren Extensional Definitions Ontology"@en ;
    dc:creator "ProEthica AI"@en ;
    dc:date "2025-05-11"^^xsd:date ;
    rdfs:comment "Ontology extensions for McLaren's extensional definition approach, integrating with the engineering-ethics ontology"@en ;
    owl:imports <http://proethica.org/ontology/engineering-ethics> .

#################################################################
# Classes
#################################################################

# Core Extensional Definition Classes

:PrincipleInstantiation rdf:type owl:Class ;
    rdfs:label "Principle Instantiation"@en ;
    rdfs:comment "An application of an abstract principle to a concrete fact in a case"@en ;
    rdfs:subClassOf proeth:EntityType .

:PrincipleConflict rdf:type owl:Class ;
    rdfs:label "Principle Conflict"@en ;
    rdfs:comment "A conflict between two principles in a specific context"@en ;
    rdfs:subClassOf proeth:EntityType .

:OperationalizationTechnique rdf:type owl:Class ;
    rdfs:label "Operationalization Technique"@en ;
    rdfs:comment "A technique for connecting abstract principles to concrete facts"@en ;
    rdfs:subClassOf proeth:EntityType .

:ExtensionalDefinition rdf:type owl:Class ;
    rdfs:label "Extensional Definition"@en ;
    rdfs:comment "A definition of a principle through its applications in concrete cases"@en ;
    rdfs:subClassOf proeth:EntityType .

# Operationalization Technique Subclasses

:PrincipleInstantiationTechnique rdf:type owl:Class ;
    rdfs:label "Principle Instantiation Technique"@en ;
    rdfs:comment "Connecting an abstract principle to specific facts"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

:FactHypothesesTechnique rdf:type owl:Class ;
    rdfs:label "Fact Hypotheses Technique"@en ;
    rdfs:comment "Hypothesizing facts that affect principle application"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

:PrincipleRevisionTechnique rdf:type owl:Class ;
    rdfs:label "Principle Revision Technique"@en ;
    rdfs:comment "Evolving principle interpretation over time"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

:ConflictingPrinciplesResolutionTechnique rdf:type owl:Class ;
    rdfs:label "Conflicting Principles Resolution Technique"@en ;
    rdfs:comment "Resolving conflicts between principles"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

:PrincipleGroupingTechnique rdf:type owl:Class ;
    rdfs:label "Principle Grouping Technique"@en ;
    rdfs:comment "Grouping related principles to strengthen an argument"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

:CaseInstantiationTechnique rdf:type owl:Class ;
    rdfs:label "Case Instantiation Technique"@en ;
    rdfs:comment "Using past cases as precedent"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

:PrincipleElaborationTechnique rdf:type owl:Class ;
    rdfs:label "Principle Elaboration Technique"@en ;
    rdfs:comment "Elaborating principles from past cases"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

:CaseGroupingTechnique rdf:type owl:Class ;
    rdfs:label "Case Grouping Technique"@en ;
    rdfs:comment "Grouping related cases to support an argument"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

:OperationalizationReuseTechnique rdf:type owl:Class ;
    rdfs:label "Operationalization Reuse Technique"@en ;
    rdfs:comment "Reusing previous applications of any technique"@en ;
    rdfs:subClassOf :OperationalizationTechnique .

# Principle Conflict Resolution Types

:ResolutionType rdf:type owl:Class ;
    rdfs:label "Resolution Type"@en ;
    rdfs:comment "A type of resolution for principle conflicts"@en ;
    rdfs:subClassOf proeth:EntityType .

:OverrideResolution rdf:type owl:Class ;
    rdfs:label "Override Resolution"@en ;
    rdfs:comment "A conflict resolution where one principle overrides another"@en ;
    rdfs:subClassOf :ResolutionType .

:BalancingResolution rdf:type owl:Class ;
    rdfs:label "Balancing Resolution"@en ;
    rdfs:comment "A conflict resolution where principles are balanced against each other"@en ;
    rdfs:subClassOf :ResolutionType .

:ContextualResolution rdf:type owl:Class ;
    rdfs:label "Contextual Resolution"@en ;
    rdfs:comment "A conflict resolution that depends on specific contextual factors"@en ;
    rdfs:subClassOf :ResolutionType .

#################################################################
# Object Properties
#################################################################

:appliesPrinciple rdf:type owl:ObjectProperty ;
    rdfs:label "applies principle"@en ;
    rdfs:comment "Links a principle instantiation to the principle being applied"@en ;
    rdfs:domain :PrincipleInstantiation ;
    rdfs:range eneth:Principle .

:hasPrinciple1 rdf:type owl:ObjectProperty ;
    rdfs:label "has principle 1"@en ;
    rdfs:comment "Links a principle conflict to the first principle involved"@en ;
    rdfs:domain :PrincipleConflict ;
    rdfs:range eneth:Principle .

:hasPrinciple2 rdf:type owl:ObjectProperty ;
    rdfs:label "has principle 2"@en ;
    rdfs:comment "Links a principle conflict to the second principle involved"@en ;
    rdfs:domain :PrincipleConflict ;
    rdfs:range eneth:Principle .

:hasResolution rdf:type owl:ObjectProperty ;
    rdfs:label "has resolution"@en ;
    rdfs:comment "Links a principle conflict to its resolution type"@en ;
    rdfs:domain :PrincipleConflict ;
    rdfs:range :ResolutionType .

:dominantPrinciple rdf:type owl:ObjectProperty ;
    rdfs:label "dominant principle"@en ;
    rdfs:comment "Indicates which principle takes precedence in a conflict resolution"@en ;
    rdfs:domain :PrincipleConflict ;
    rdfs:range eneth:Principle .

:overrides rdf:type owl:ObjectProperty ;
    rdfs:label "overrides"@en ;
    rdfs:comment "Indicates that one principle overrides another in a specific context"@en ;
    rdfs:domain eneth:Principle ;
    rdfs:range eneth:Principle .

:usesTechnique rdf:type owl:ObjectProperty ;
    rdfs:label "uses technique"@en ;
    rdfs:comment "Links a case to an operationalization technique used in it"@en ;
    rdfs:domain proeth:Case ;
    rdfs:range :OperationalizationTechnique .

:hasInstantiation rdf:type owl:ObjectProperty ;
    rdfs:label "has instantiation"@en ;
    rdfs:comment "Links a principle to a specific instantiation in a case"@en ;
    rdfs:domain eneth:Principle ;
    rdfs:range :PrincipleInstantiation .

:hasConflict rdf:type owl:ObjectProperty ;
    rdfs:label "has conflict"@en ;
    rdfs:comment "Links a case to a principle conflict it contains"@en ;
    rdfs:domain proeth:Case ;
    rdfs:range :PrincipleConflict .

:hasExtensionalDefinition rdf:type owl:ObjectProperty ;
    rdfs:label "has extensional definition"@en ;
    rdfs:comment "Links a principle to its extensional definition"@en ;
    rdfs:domain eneth:Principle ;
    rdfs:range :ExtensionalDefinition .

:usedInCase rdf:type owl:ObjectProperty ;
    rdfs:label "used in case"@en ;
    rdfs:comment "Links an operationalization technique to a case where it's used"@en ;
    rdfs:domain :OperationalizationTechnique ;
    rdfs:range proeth:Case .

#################################################################
# Data Properties
#################################################################

:toFact rdf:type owl:DatatypeProperty ;
    rdfs:label "to fact"@en ;
    rdfs:comment "Links a principle instantiation to the concrete fact it applies to"@en ;
    rdfs:domain :PrincipleInstantiation ;
    rdfs:range xsd:string .

:hasConfidence rdf:type owl:DatatypeProperty ;
    rdfs:label "has confidence"@en ;
    rdfs:comment "Indicates the confidence level for a principle instantiation or conflict"@en ;
    rdfs:range xsd:float .

:isNegativeExample rdf:type owl:DatatypeProperty ;
    rdfs:label "is negative example"@en ;
    rdfs:comment "Indicates whether a principle instantiation is a negative example (violation of the principle)"@en ;
    rdfs:domain :PrincipleInstantiation ;
    rdfs:range xsd:boolean .

:hasContext rdf:type owl:DatatypeProperty ;
    rdfs:label "has context"@en ;
    rdfs:comment "Provides contextual information for a principle instantiation or conflict"@en ;
    rdfs:range xsd:string .

:hasResolutionContext rdf:type owl:DatatypeProperty ;
    rdfs:label "has resolution context"@en ;
    rdfs:comment "Details the specific context in which a principle conflict is resolved"@en ;
    rdfs:domain :PrincipleConflict ;
    rdfs:range xsd:string .
