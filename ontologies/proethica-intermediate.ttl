@prefix : <http://proethica.org/ontology/intermediate#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix bfo: <http://purl.obolibrary.org/obo/> .
@base <http://proethica.org/ontology/intermediate> .

<http://proethica.org/ontology/intermediate> rdf:type owl:Ontology ;
    owl:imports <http://purl.obolibrary.org/obo/bfo.owl> ;
    rdfs:label "ProEthica Intermediate Ontology"@en ;
    rdfs:comment "A mid-level ontology bridging BFO to domain-specific ethical frameworks"@en ;
    dc:creator "ProEthica AI"@en ;
    dc:date "2025-05-19"^^xsd:date .

#################################################################
#    Core Ethical Modeling Concepts                              
#################################################################

# Declare key types needed by the OntologyMCPServer for entity extraction
:EntityType rdf:type owl:Class ;
    rdfs:label "Entity Type"@en ;
    rdfs:comment "Meta-class for entity types recognized by the ProEthica system"@en .

# Entity types recognized by the MCP server
:Role rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :Role ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role from BFO
    rdfs:label "Role"@en ;
    rdfs:comment "A socially recognized status that carries a set of responsibilities, expectations, and norms established by a professional or social community. Role morality evaluates ethical behavior through the lens of such responsibilities, considering the professional context, standards, and historical precedents. Roles guide ethical judgment and competence both for humans and AI systems within their domain of application."@en .

:Condition rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :ConditionType ;
    rdfs:subClassOf bfo:BFO_0000019 ; # quality from BFO
    rdfs:label "Condition"@en ;
    rdfs:comment "A state, situation, or context relevant to ethical scenarios"@en .

:Resource rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :ResourceType ;
    rdfs:subClassOf bfo:BFO_0000040 ; # material entity from BFO
    rdfs:label "Resource"@en ;
    rdfs:comment "A physical or informational entity used in ethical scenarios"@en .

:Event rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :EventType ;
    rdfs:subClassOf bfo:BFO_0000015 ; # process from BFO
    rdfs:label "Event"@en ;
    rdfs:comment "An occurrence or happening in an ethical scenario"@en .

:Action rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :ActionType ;
    rdfs:subClassOf bfo:BFO_0000015 ; # process from BFO
    rdfs:label "Action"@en ;
    rdfs:comment "An intentional activity performed by an agent in an ethical scenario"@en .

:Capability rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :CapabilityType ;
    rdfs:subClassOf bfo:BFO_0000016 ; # disposition from BFO
    rdfs:label "Capability"@en ;
    rdfs:comment "A skill, ability, or competency that can be realized in professional contexts"@en .

:Decision rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :ActionType ;
    rdfs:subClassOf :Action ;
    rdfs:label "Decision"@en ;
    rdfs:comment "A choice made by an agent in response to an ethical situation"@en .

# Meta-classes for entity types
:ConditionType rdf:type owl:Class ;
    rdfs:label "Condition Type"@en ;
    rdfs:comment "Meta-class for condition types recognized by the ProEthica system"@en .

:ResourceType rdf:type owl:Class ;
    rdfs:label "Resource Type"@en ;
    rdfs:comment "Meta-class for resource types recognized by the ProEthica system"@en .

:EventType rdf:type owl:Class ;
    rdfs:label "Event Type"@en ;
    rdfs:comment "Meta-class for event types recognized by the ProEthica system"@en .

:ActionType rdf:type owl:Class ;
    rdfs:label "Action Type"@en ;
    rdfs:comment "Meta-class for action types recognized by the ProEthica system"@en .

:CapabilityType rdf:type owl:Class ;
    rdfs:label "Capability Type"@en ;
    rdfs:comment "Meta-class for capability types recognized by the ProEthica system"@en .

# Common Ethical Concepts
:EthicalPrinciple rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000031 ; # generically dependent continuant
    rdfs:label "Ethical Principle"@en ;
    rdfs:comment "A principle that provides ethical guidance"@en .

:ProfessionalResponsibility rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role
    rdfs:label "Professional Responsibility"@en ;
    rdfs:comment "A responsibility arising from professional status or role"@en .

:Agent rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000004 ; # independent continuant
    rdfs:label "Agent"@en ;
    rdfs:comment "An entity capable of acts and bearing responsibility for them"@en .

:HumanAgent rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Human Agent"@en ;
    rdfs:comment "A human being considered as an agent"@en .

:OrganizationalAgent rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Organizational Agent"@en ;
    rdfs:comment "An organization considered as an agent"@en .

#################################################################
#    Temporal Concepts                                          
#################################################################

# Timeline as a one-dimensional temporal region
:Timeline rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:label "Timeline"@en ;
    rdfs:comment "A continuous temporal region representing the duration of a scenario"@en .

# Timeline segment
:TimelineSegment rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:subClassOf [
        rdf:type owl:Restriction ;
        owl:onProperty bfo:BFO_0000050 ; # is_part_of
        owl:someValuesFrom :Timeline
    ] ;
    rdfs:label "Timeline Segment"@en ;
    rdfs:comment "A portion of the timeline containing related events"@en .

# Event time point
:EventTimePoint rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000148 ; # zero-dimensional temporal region
    rdfs:label "Event Time Point"@en ;
    rdfs:comment "A specific point in time when an event occurs"@en .

# Decision temporal context
:DecisionTemporalContext rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:label "Decision Temporal Context"@en ;
    rdfs:comment "The temporal context in which a decision is made"@en .

# Action temporal context
:ActionTemporalContext rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:label "Action Temporal Context"@en ;
    rdfs:comment "The temporal context in which an action occurs"@en .

# Decision sequence
:DecisionSequence rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:label "Decision Sequence"@en ;
    rdfs:comment "A series of related decisions that form a coherent sequence"@en .

# Decision option
:DecisionOption rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role
    rdfs:label "Decision Option"@en ;
    rdfs:comment "An option or alternative considered in a decision"@en .

# Decision consequence
:DecisionConsequence rdf:type owl:Class ;
    rdfs:subClassOf :Event ;
    rdfs:label "Decision Consequence"@en ;
    rdfs:comment "An event that occurs as a direct result of a decision"@en .

# Decision branching point
:DecisionBranchingPoint rdf:type owl:Class ;
    rdfs:subClassOf :TimelineSegment ;
    rdfs:label "Decision Branching Point"@en ;
    rdfs:comment "A point in the timeline where multiple alternative futures are possible based on a decision"@en .

# Decision context
:DecisionContext rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000040 ; # material entity
    rdfs:label "Decision Context"@en ;
    rdfs:comment "The situational context in which a decision is made, including relevant facts and constraints"@en .

#################################################################
#    Temporal Relation Properties                               
#################################################################

# Temporal properties
:temporallyPrecedes rdf:type owl:ObjectProperty ;
    rdfs:subPropertyOf bfo:BFO_0000062 ; # preceded_by (inverse)
    rdfs:domain bfo:BFO_0000008 ; # temporal region
    rdfs:range bfo:BFO_0000008 ; # temporal region
    rdfs:label "temporally precedes"@en ;
    rdfs:comment "Indicates that one temporal region occurs before another"@en .

:temporallyFollows rdf:type owl:ObjectProperty ;
    rdfs:subPropertyOf bfo:BFO_0000063 ; # precedes
    rdfs:domain bfo:BFO_0000008 ; # temporal region
    rdfs:range bfo:BFO_0000008 ; # temporal region
    rdfs:label "temporally follows"@en ;
    rdfs:comment "Indicates that one temporal region occurs after another"@en .

:temporalDistance rdf:type owl:DatatypeProperty ;
    rdfs:domain bfo:BFO_0000008 ; # temporal region
    rdfs:range xsd:duration ;
    rdfs:label "temporal distance"@en ;
    rdfs:comment "The duration between two temporal regions"@en .

:occursAt rdf:type owl:ObjectProperty ;
    rdfs:domain bfo:BFO_0000015 ; # process
    rdfs:range bfo:BFO_0000008 ; # temporal region
    rdfs:label "occurs at"@en ;
    rdfs:comment "Relates a process to its temporal region"@en .

:hasDuration rdf:type owl:DatatypeProperty ;
    rdfs:domain bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:range xsd:duration ;
    rdfs:label "has duration"@en ;
    rdfs:comment "The duration of a temporal region"@en .

# Decision-specific temporal properties
:hasDecisionPoint rdf:type owl:ObjectProperty ;
    rdfs:domain :Decision ;
    rdfs:range :EventTimePoint ;
    rdfs:label "has decision point"@en ;
    rdfs:comment "The specific time point when a decision was made"@en .

:hasTemporalConsequence rdf:type owl:ObjectProperty ;
    rdfs:domain :Decision ;
    rdfs:range :Event ;
    rdfs:label "has temporal consequence"@en ;
    rdfs:comment "Relates a decision to events that occur as a result"@en .

:temporallyNecessitates rdf:type owl:ObjectProperty ;
    rdfs:domain :Event ;
    rdfs:range :Decision ;
    rdfs:label "temporally necessitates"@en ;
    rdfs:comment "Indicates that an event creates the need for a decision"@en .

# Additional temporal relationships
:temporallyCoincidesWith rdf:type owl:ObjectProperty ;
    rdfs:domain bfo:BFO_0000008 ; # temporal region
    rdfs:range bfo:BFO_0000008 ; # temporal region
    rdfs:label "temporally coincides with"@en ;
    rdfs:comment "Indicates that two temporal regions occur at the same time"@en .

:temporallyOverlaps rdf:type owl:ObjectProperty ;
    rdfs:domain bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:range bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:label "temporally overlaps"@en ;
    rdfs:comment "Indicates that two temporal intervals have an overlapping period"@en .

:hasStartPoint rdf:type owl:ObjectProperty ;
    rdfs:domain bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:range bfo:BFO_0000148 ; # zero-dimensional temporal region
    rdfs:label "has start point"@en ;
    rdfs:comment "Relates a temporal interval to its starting point"@en .

:hasEndPoint rdf:type owl:ObjectProperty ;
    rdfs:domain bfo:BFO_0000038 ; # one-dimensional temporal region
    rdfs:range bfo:BFO_0000148 ; # zero-dimensional temporal region
    rdfs:label "has end point"@en ;
    rdfs:comment "Relates a temporal interval to its ending point"@en .

#################################################################
#    Enhanced Temporal Relations (Enhancement Group 1)          
#################################################################

# Temporal granularity
:TemporalGranularity rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000031 ; # generically dependent continuant
    rdfs:label "Temporal Granularity"@en ;
    rdfs:comment "The level of detail or precision at which temporal phenomena are measured or described"@en .

# Temporal granularity subclasses
:Second rdf:type owl:Class ;
    rdfs:subClassOf :TemporalGranularity ;
    rdfs:label "Second"@en ;
    rdfs:comment "Temporal granularity at the level of seconds"@en .

:Minute rdf:type owl:Class ;
    rdfs:subClassOf :TemporalGranularity ;
    rdfs:label "Minute"@en ;
    rdfs:comment "Temporal granularity at the level of minutes"@en .

:Hour rdf:type owl:Class ;
    rdfs:subClassOf :TemporalGranularity ;
    rdfs:label "Hour"@en ;
    rdfs:comment "Temporal granularity at the level of hours"@en .

:Day rdf:type owl:Class ;
    rdfs:subClassOf :TemporalGranularity ;
    rdfs:label "Day"@en ;
    rdfs:comment "Temporal granularity at the level of days"@en .

:Week rdf:type owl:Class ;
    rdfs:subClassOf :TemporalGranularity ;
    rdfs:label "Week"@en ;
    rdfs:comment "Temporal granularity at the level of weeks"@en .

:Month rdf:type owl:Class ;
    rdfs:subClassOf :TemporalGranularity ;
    rdfs:label "Month"@en ;
    rdfs:comment "Temporal granularity at the level of months"@en .

:Year rdf:type owl:Class ;
    rdfs:subClassOf :TemporalGranularity ;
    rdfs:label "Year"@en ;
    rdfs:comment "Temporal granularity at the level of years"@en .

# Enhanced Temporal Relations properties
:hasTemporalGranularity rdf:type owl:ObjectProperty ;
    rdfs:domain bfo:BFO_0000008 ; # temporal region
    rdfs:range :TemporalGranularity ;
    rdfs:label "has temporal granularity"@en ;
    rdfs:comment "The granularity at which a temporal region is measured"@en .

:hasConfidenceValue rdf:type owl:DatatypeProperty ;
    rdfs:domain owl:ObjectProperty ;
    rdfs:range xsd:float ;
    rdfs:label "has confidence value"@en ;
    rdfs:comment "Confidence score for a relationship between 0.0 and 1.0"@en .

#################################################################
#    Decision Timeline Concepts (Enhancement Group 2)           
#################################################################

# Decision timeline
:DecisionTimeline rdf:type owl:Class ;
    rdfs:subClassOf :Timeline ;
    rdfs:label "Decision Timeline"@en ;
    rdfs:comment "A timeline that represents the sequence of decisions and their consequences"@en .

# Decision timeline segment
:DecisionTimelineSegment rdf:type owl:Class ;
    rdfs:subClassOf :TimelineSegment ;
    rdfs:label "Decision Timeline Segment"@en ;
    rdfs:comment "A segment of a decision timeline that represents a coherent decision-making phase"@en .

# Alternate timeline
:AlternateTimeline rdf:type owl:Class ;
    rdfs:subClassOf :Timeline ;
    rdfs:label "Alternate Timeline"@en ;
    rdfs:comment "A hypothetical timeline representing what would have happened given different decisions"@en .

# Alternative decision
:AlternativeDecision rdf:type owl:Class ;
    rdfs:subClassOf :Decision ;
    rdfs:label "Alternative Decision"@en ;
    rdfs:comment "A decision option that was not selected but would have led to an alternate timeline"@en .

# Decision Timeline properties
:hasAlternative rdf:type owl:ObjectProperty ;
    rdfs:domain :Decision ;
    rdfs:range :AlternativeDecision ;
    rdfs:label "has alternative"@en ;
    rdfs:comment "Relates a decision to an alternative that was not chosen but would have led to a different timeline"@en .

:leadsToTimeline rdf:type owl:ObjectProperty ;
    rdfs:domain :Decision ;
    rdfs:range :Timeline ;
    rdfs:label "leads to timeline"@en ;
    rdfs:comment "Relates a decision to the timeline that results from it"@en .

:forksFromTimeline rdf:type owl:ObjectProperty ;
    rdfs:domain :AlternateTimeline ;
    rdfs:range :Timeline ;
    rdfs:label "forks from timeline"@en ;
    rdfs:comment "Indicates that an alternate timeline forks from a primary timeline at a decision point"@en .

:divergesAtDecision rdf:type owl:ObjectProperty ;
    rdfs:domain :AlternateTimeline ;
    rdfs:range :Decision ;
    rdfs:label "diverges at decision"@en ;
    rdfs:comment "Specifies the decision point at which an alternate timeline diverges from the primary timeline"@en .

#################################################################
#    Ethical Context Enhancements (Enhancement Group 3)         
#################################################################

# Ethical context
:EthicalContext rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000040 ; # material entity
    rdfs:label "Ethical Context"@en ;
    rdfs:comment "The situational context in which ethical decisions are made, including relevant facts, principles, and constraints"@en .

# Ethical agent
:EthicalAgent rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Ethical Agent"@en ;
    rdfs:comment "An agent capable of making ethical decisions and bearing moral responsibility"@en .

# Ethical decision point
:EthicalDecisionPoint rdf:type owl:Class ;
    rdfs:subClassOf :DecisionBranchingPoint ;
    rdfs:label "Ethical Decision Point"@en ;
    rdfs:comment "A decision point where ethical principles must be weighed against each other"@en .

# Ethical Context properties
:hasEthicalWeight rdf:type owl:DatatypeProperty ;
    rdfs:domain :EthicalPrinciple ;
    rdfs:range xsd:float ;
    rdfs:label "has ethical weight"@en ;
    rdfs:comment "The relative weight or importance of an ethical principle in a given context"@en .

:hasEthicalContext rdf:type owl:ObjectProperty ;
    rdfs:domain bfo:BFO_0000015 ; # process
    rdfs:range :EthicalContext ;
    rdfs:label "has ethical context"@en ;
    rdfs:comment "Relates a process to its ethical context, including principles, agents and constraints"@en .

:involvesEthicalAgent rdf:type owl:ObjectProperty ;
    rdfs:domain :EthicalContext ;
    rdfs:range :EthicalAgent ;
    rdfs:label "involves ethical agent"@en ;
    rdfs:comment "Indicates that an ethical context involves a particular ethical agent"@en .
