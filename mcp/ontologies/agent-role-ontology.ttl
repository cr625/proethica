@prefix : <http://proethica.org/ontology/agent-role#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix bfo: <http://purl.obolibrary.org/obo/> .
@prefix eng: <http://proethica.org/ontology/engineering-ethics#> .
@base <http://proethica.org/ontology/agent-role> .

<http://proethica.org/ontology/agent-role> rdf:type owl:Ontology ;
    owl:imports <http://purl.obolibrary.org/obo/bfo.owl> ;
    rdfs:label "Agent and Role Ontology"@en ;
    rdfs:comment "A mid-level ontology bridging BFO-core and engineering ethics, defining agents and roles"@en ;
    dc:creator "ProEthica AI"@en ;
    dc:date "2025-04-02"^^xsd:date .

#################################################################
#    Classes
#################################################################

### Agent Class - A subclass of BFO:independent continuant
:Agent rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000004 ; # independent continuant
    rdfs:label "Agent"@en ;
    rdfs:comment "An entity capable of acting in the world with some degree of autonomy. Agents can bear roles, have capabilities, and may engage in action governed by principles."@en .

### Character Class - A subclass of Agent
:Character rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Character"@en ;
    rdfs:comment "A specific type of agent that represents a person or entity with identity, capabilities, and the ability to participate in ethical scenarios."@en .

### Organizational Agent - A subclass of Agent for organizations
:OrganizationalAgent rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Organizational Agent"@en ;
    rdfs:comment "An agent that represents an organization, institution, or corporate entity, with capabilities to act as a unit."@en .

### Human Agent - A subclass of Character for individual humans
:HumanAgent rdf:type owl:Class ;
    rdfs:subClassOf :Character ;
    rdfs:label "Human Agent"@en ;
    rdfs:comment "A character that specifically represents an individual human being."@en .

### BFO already has Role (BFO_0000023), but we'll define some more specific subtypes

### Professional Role - A subclass of BFO:role
:ProfessionalRole rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role
    rdfs:label "Professional Role"@en ;
    rdfs:comment "A role that is defined by professional standards, responsibilities, and obligations."@en .

### Ethical Role - A subclass of BFO:role
:EthicalRole rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role
    rdfs:label "Ethical Role"@en ;
    rdfs:comment "A role that specifically entails ethical obligations, duties, or responsibilities."@en .

### Client Role - A subclass of Professional Role and Ethical Role
:ClientRole rdf:type owl:Class ;
    rdfs:subClassOf :ProfessionalRole, :EthicalRole ;
    rdfs:label "Client Role"@en ;
    rdfs:comment "A professional and ethical role representing the recipient of professional services."@en .

### Professional Service Provider Role - A subclass of Professional Role and Ethical Role
:ProfessionalServiceProviderRole rdf:type owl:Class ;
    rdfs:subClassOf :ProfessionalRole, :EthicalRole ;
    rdfs:label "Professional Service Provider Role"@en ;
    rdfs:comment "A professional and ethical role representing one who provides professional services to clients."@en .

### Ethical Obligation - A class for ethical duties
:EthicalObligation rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000017 ; # realizable entity
    rdfs:label "Ethical Obligation"@en ;
    rdfs:comment "A realizable entity representing an ethical duty, obligation, or requirement inhering in an agent."@en .

### Ethical Principle - A class for general ethical principles
:EthicalPrinciple rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000031 ; # generically dependent continuant
    rdfs:label "Ethical Principle"@en ;
    rdfs:comment "A generically dependent continuant representing a general ethical principle or standard."@en .

#################################################################
#    Object Properties
#################################################################

### has role
:hasRole rdf:type owl:ObjectProperty ;
    rdfs:domain :Agent ;
    rdfs:range bfo:BFO_0000023 ;
    rdfs:label "has role"@en ;
    rdfs:comment "Relates an agent to a role that it bears."@en .

### has ethical obligation
:hasEthicalObligation rdf:type owl:ObjectProperty ;
    rdfs:domain :Agent ;
    rdfs:range :EthicalObligation ;
    rdfs:label "has ethical obligation"@en ;
    rdfs:comment "Relates an agent to an ethical obligation that it bears."@en .

### governed by principle
:governedByPrinciple rdf:type owl:ObjectProperty ;
    rdfs:domain :EthicalObligation ;
    rdfs:range :EthicalPrinciple ;
    rdfs:label "governed by principle"@en ;
    rdfs:comment "Relates an ethical obligation to the ethical principle that governs it."@en .

### has priority over
:hasPriorityOver rdf:type owl:ObjectProperty ;
    rdfs:domain :EthicalObligation ;
    rdfs:range :EthicalObligation ;
    rdfs:label "has priority over"@en ;
    rdfs:comment "Relates an ethical obligation to another ethical obligation over which it takes precedence in case of conflict."@en .

### Role specific obligation
:roleSpecificObligation rdf:type owl:ObjectProperty ;
    rdfs:domain bfo:BFO_0000023 ; # role
    rdfs:range :EthicalObligation ;
    rdfs:label "role specific obligation"@en ;
    rdfs:comment "Relates a role to an ethical obligation specific to that role."@en .

#################################################################
#    Specific Instances for NSPE Case 89-7-1
#################################################################

### Confidentiality Obligation
:ConfidentialityObligation rdf:type owl:Class ;
    rdfs:subClassOf :EthicalObligation ;
    rdfs:label "Confidentiality Obligation"@en ;
    rdfs:comment "An ethical obligation to maintain the confidentiality of information obtained in a professional capacity."@en .

### Public Safety Obligation
:PublicSafetyObligation rdf:type owl:Class ;
    rdfs:subClassOf :EthicalObligation ;
    rdfs:label "Public Safety Obligation"@en ;
    rdfs:comment "An ethical obligation to protect public safety, health, and welfare."@en .

### Engineering Professional
:EngineeringProfessional rdf:type owl:Class ;
    rdfs:subClassOf :ProfessionalServiceProviderRole ;
    rdfs:label "Engineering Professional"@en ;
    rdfs:comment "A professional role specific to engineering practice."@en .

### Engineer-Client Relationship
:EngineerClientRelationship rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000015 ; # process
    rdfs:label "Engineer-Client Relationship"@en ;
    rdfs:comment "A process representing the professional relationship between an engineer and a client."@en .
