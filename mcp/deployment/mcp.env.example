# MCP Server Environment Variables
# Copy this to /etc/proethica/mcp.env and fill in your values

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key  # Optional

# Database (use same as main app)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_ethical_dm

# Authentication
MCP_AUTH_TOKEN=generate-secure-token-here

# Server Configuration
MCP_SERVER_PORT=5001
USE_MOCK_GUIDELINE_RESPONSES=false

# Ontology Configuration
ONTOLOGY_DIR=/home/chris/proethica/ontologies