@prefix : <http://proethica.org/ontology/agent-role#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix bfo: <http://purl.obolibrary.org/obo/> .
@base <http://proethica.org/ontology/agent-role> .

<http://proethica.org/ontology/agent-role> rdf:type owl:Ontology ;
    owl:imports <http://purl.obolibrary.org/obo/bfo.owl> ;
    rdfs:label "Agent-Role Mid-Level Ontology"@en ;
    rdfs:comment "A mid-level ontology connecting BFO to domain ontologies for agents and roles"@en ;
    dc:creator "ProEthica AI"@en ;
    dc:date "2025-04-02"^^xsd:date .

#################################################################
#    Classes for Agent Hierarchy
#################################################################

:Agent rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000004 ; # independent continuant
    rdfs:label "Agent"@en ;
    rdfs:comment "An entity capable of acts and bearing responsibility for them"@en .

:HumanAgent rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Human Agent"@en ;
    rdfs:comment "A human being considered as an agent capable of acts and bearing responsibility"@en .

:OrganizationalAgent rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Organizational Agent"@en ;
    rdfs:comment "An organization considered as an agent capable of acts and bearing responsibility"@en .

:Character rdf:type owl:Class ;
    rdfs:subClassOf :HumanAgent ;
    rdfs:label "Character"@en ;
    rdfs:comment "A human agent with specific characteristics, traits, and roles in a narrative or scenario"@en .

:EngineeringProfessional rdf:type owl:Class ;
    rdfs:subClassOf :Character ;
    rdfs:label "Engineering Professional"@en ;
    rdfs:comment "A character who is qualified and practices as an engineering professional"@en .

#################################################################
#    Role-Related Classes
#################################################################

# Base role types aligned with BFO
:AgentRole rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role from BFO
    rdfs:label "Agent Role"@en ;
    rdfs:comment "A role that can be realized by an agent"@en .

:ProfessionalRole rdf:type owl:Class ;
    rdfs:subClassOf :AgentRole ;
    rdfs:label "Professional Role"@en ;
    rdfs:comment "A role related to a professional practice or discipline"@en .

:ProfessionalServiceProviderRole rdf:type owl:Class ;
    rdfs:subClassOf :ProfessionalRole ;
    rdfs:label "Professional Service Provider Role"@en ;
    rdfs:comment "A role of providing professional services to clients or other entities"@en .

:ClientRole rdf:type owl:Class ;
    rdfs:subClassOf :AgentRole ;
    rdfs:label "Client Role"@en ;
    rdfs:comment "A role of receiving services from a professional service provider"@en .

:StakeholderRole rdf:type owl:Class ;
    rdfs:subClassOf :AgentRole ;
    rdfs:label "Stakeholder Role"@en ;
    rdfs:comment "A role of having a stake or interest in some process, decision, or outcome"@en .

# Ethical principle and obligation classes
:EthicalPrinciple rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000031 ; # generically dependent continuant
    rdfs:label "Ethical Principle"@en ;
    rdfs:comment "A principle that provides ethical guidance"@en .

:EthicalObligation rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role from BFO
    rdfs:label "Ethical Obligation"@en ;
    rdfs:comment "An obligation that arises from ethical principles or professional codes"@en .

:ConfidentialityObligation rdf:type owl:Class ;
    rdfs:subClassOf :EthicalObligation ;
    rdfs:label "Confidentiality Obligation"@en ;
    rdfs:comment "An ethical obligation to maintain the confidentiality of information"@en .

:PublicSafetyObligation rdf:type owl:Class ;
    rdfs:subClassOf :EthicalObligation ;
    rdfs:label "Public Safety Obligation"@en ;
    rdfs:comment "An ethical obligation to protect public safety"@en .

#################################################################
#    Object Properties
#################################################################

:hasRole rdf:type owl:ObjectProperty ;
    rdfs:domain :Agent ;
    rdfs:range :AgentRole ;
    rdfs:label "has role"@en ;
    rdfs:comment "Relates an agent to a role that the agent has"@en .

:realizesRole rdf:type owl:ObjectProperty ;
    rdfs:subPropertyOf bfo:BFO_0000055 ; # realizes from BFO
    rdfs:domain bfo:BFO_0000015 ; # process from BFO
    rdfs:range :AgentRole ;
    rdfs:label "realizes role"@en ;
    rdfs:comment "Relates a process to a role that is realized through that process"@en .

:isRoleOf rdf:type owl:ObjectProperty ;
    owl:inverseOf :hasRole ;
    rdfs:domain :AgentRole ;
    rdfs:range :Agent ;
    rdfs:label "is role of"@en ;
    rdfs:comment "Relates a role to the agent that has that role"@en .

:hasObligation rdf:type owl:ObjectProperty ;
    rdfs:domain :Agent ;
    rdfs:range :EthicalObligation ;
    rdfs:label "has obligation"@en ;
    rdfs:comment "Relates an agent to an ethical obligation that the agent has"@en .

:isObligationOf rdf:type owl:ObjectProperty ;
    owl:inverseOf :hasObligation ;
    rdfs:domain :EthicalObligation ;
    rdfs:range :Agent ;
    rdfs:label "is obligation of"@en ;
    rdfs:comment "Relates an ethical obligation to the agent that has that obligation"@en .

:hasEthicalPrinciple rdf:type owl:ObjectProperty ;
    rdfs:domain :AgentRole ;
    rdfs:range :EthicalPrinciple ;
    rdfs:label "has ethical principle"@en ;
    rdfs:comment "Relates a role to an ethical principle that applies to that role"@en .

:impliesToHaveObligation rdf:type owl:ObjectProperty ;
    rdfs:domain :AgentRole ;
    rdfs:range :EthicalObligation ;
    rdfs:label "implies to have obligation"@en ;
    rdfs:comment "Relates a role to an ethical obligation that comes with that role"@en .
