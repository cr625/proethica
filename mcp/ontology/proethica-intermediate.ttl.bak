@prefix : <http://proethica.

org/ontology/intermediate#> .
@prefix owl: <http://www.

w3.

org/2002/07/owl#> .
@prefix rdf: <http://www.

w3.

org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.

w3.

org/XML/1998/namespace> .
@prefix xsd: <http://www.

w3.

org/2001/XMLSchema#> .
@prefix rdfs: <http://www.

w3.

org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.

org/dc/elements/1.1/> .
@prefix bfo: <http://purl.

obolibrary.

org/obo/> .
@base <http://proethica.

org/ontology/intermediate> .

<http://proethica.

org/ontology/intermediate> rdf:type owl:Ontology ;
    owl:imports <http://purl.

obolibrary.

org/obo/bfo.

owl> ;
    rdfs:label "ProEthica Intermediate Ontology"@en ;
    rdfs:comment "A mid-level ontology bridging BFO to domain-specific ethical frameworks"@en ;
    dc:creator "ProEthica AI"@en ;
    dc:date "2025-04-03"^^xsd:date .

#################################################################
#    Core Categories
#################################################################

# Declare key types needed by the OntologyMCPServer for entity extraction
:EntityType rdf:type owl:Class ;
    rdfs:label "Entity Type"@en ;
    rdfs:comment "Meta-class for entity types recognized by the ProEthica system"@en .

# Entity types recognized by the MCP server
:Role rdf:type owl:Class ;
    rdfs:label "Role Type"@en ;
    rdfs:comment "Meta-class for role types recognized by the ProEthica system"@en .

:ConditionType rdf:type owl:Class ;
    rdfs:label "Condition Type"@en ;
    rdfs:comment "Meta-class for condition types recognized by the ProEthica system"@en .

:ResourceType rdf:type owl:Class ;
    rdfs:label "Resource Type"@en ;
    rdfs:comment "Meta-class for resource types recognized by the ProEthica system"@en .

:EventType rdf:type owl:Class ;
    rdfs:label "Event Type"@en ;
    rdfs:comment "Meta-class for event types recognized by the ProEthica system"@en .

:ActionType rdf:type owl:Class ;
    rdfs:label "Action Type"@en ;
    rdfs:comment "Meta-class for action types recognized by the ProEthica system"@en .

# Role - Professional positions and responsibilities
:Role rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :Role ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role from BFO
    rdfs:label "Role"@en ;
    rdfs:comment "A role that can be realized by an agent in ethical scenarios"@en .

# Condition - States, situations, and contexts
:Condition rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :ConditionType ;
    rdfs:subClassOf bfo:BFO_0000019 ; # quality from BFO
    rdfs:label "Condition"@en ;
    rdfs:comment "A state, situation, or context relevant to ethical scenarios"@en .

:EthicalDilemma rdf:type owl:Class ;
    rdfs:subClassOf :Condition ;
    rdfs:label "Ethical Dilemma"@en ;
    rdfs:comment "A situation involving conflicting ethical principles or obligations"@en .

:PrincipleConflict rdf:type owl:Class ;
    rdfs:subClassOf :EthicalDilemma ;
    rdfs:label "Principle Conflict"@en ;
    rdfs:comment "A dilemma arising from two or more conflicting ethical principles"@en .

# Resource - Tangible and intangible assets
:Resource rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :ResourceType ;
    rdfs:subClassOf bfo:BFO_0000040 ; # material entity from BFO
    rdfs:label "Resource"@en ;
    rdfs:comment "A physical or informational entity used in ethical scenarios"@en .

:InformationResource rdf:type owl:Class ;
    rdfs:subClassOf :Resource ;
    rdfs:subClassOf bfo:BFO_0000031 ; # generically dependent continuant
    rdfs:label "Information Resource"@en ;
    rdfs:comment "Information, documents, or data used in ethical scenarios"@en .

:PhysicalResource rdf:type owl:Class ;
    rdfs:subClassOf :Resource ;
    rdfs:label "Physical Resource"@en ;
    rdfs:comment "Tangible objects or materials used in ethical scenarios"@en .

# Event - Occurrences, happenings, situations
:Event rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :EventType ;
    rdfs:subClassOf bfo:BFO_0000015 ; # process from BFO
    rdfs:label "Event"@en ;
    rdfs:comment "An occurrence or happening in an ethical scenario"@en .

:SignificantEvent rdf:type owl:Class ;
    rdfs:subClassOf :Event ;
    rdfs:label "Significant Event"@en ;
    rdfs:comment "An occurrence with notable ethical implications"@en .

:DiscoveryEvent rdf:type owl:Class ;
    rdfs:subClassOf :SignificantEvent ;
    rdfs:label "Discovery Event"@en ;
    rdfs:comment "An event where new information is uncovered"@en .

# Action - Activities, processes, interventions
:Action rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :ActionType ;
    rdfs:subClassOf bfo:BFO_0000015 ; # process from BFO
    rdfs:label "Action"@en ;
    rdfs:comment "An intentional activity performed by an agent in an ethical scenario"@en .

:ProfessionalAction rdf:type owl:Class ;
    rdfs:subClassOf :Action ;
    rdfs:label "Professional Action"@en ;
    rdfs:comment "An action performed in a professional capacity"@en .

# Decision - Choices and determinations
:Decision rdf:type owl:Class ;
    rdf:type :EntityType ;
    rdf:type :ActionType ;
    rdfs:subClassOf :Action ;
    rdfs:label "Decision"@en ;
    rdfs:comment "A choice made by an agent in response to an ethical situation"@en .

:EthicalDecision rdf:type owl:Class ;
    rdfs:subClassOf :Decision ;
    rdfs:label "Ethical Decision"@en ;
    rdfs:comment "A decision that involves weighing ethical considerations"@en .

:PrincipleBasedDecision rdf:type owl:Class ;
    rdfs:subClassOf :EthicalDecision ;
    rdfs:label "Principle-Based Decision"@en ;
    rdfs:comment "A decision guided primarily by ethical principles"@en .

#################################################################
#    Common Ethical Concepts
#################################################################

:EthicalPrinciple rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000031 ; # generically dependent continuant
    rdfs:label "Ethical Principle"@en ;
    rdfs:comment "A principle that provides ethical guidance"@en .

:ProfessionalResponsibility rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000023 ; # role
    rdfs:label "Professional Responsibility"@en ;
    rdfs:comment "A responsibility arising from professional status or role"@en .

:Agent rdf:type owl:Class ;
    rdfs:subClassOf bfo:BFO_0000004 ; # independent continuant
    rdfs:label "Agent"@en ;
    rdfs:comment "An entity capable of acts and bearing responsibility for them"@en .

:HumanAgent rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Human Agent"@en ;
    rdfs:comment "A human being considered as an agent"@en .

:OrganizationalAgent rdf:type owl:Class ;
    rdfs:subClassOf :Agent ;
    rdfs:label "Organizational Agent"@en ;
    rdfs:comment "An organization considered as an agent"@en .

#################################################################
#    Core Properties
#################################################################

# Properties for Roles
:hasTier rdf:type owl:DatatypeProperty ;
    rdfs:domain :Role ;
    rdfs:range xsd:string ;
    rdfs:label "has tier"@en ;
    rdfs:comment "Indicates the level or tier of a role"@en .

:hasCapability rdf:type owl:ObjectProperty ;
    rdfs:domain :Role ;
    rdfs:label "has capability"@en ;
    rdfs:comment "Relates a role to capabilities it possesses"@en .

:hasResponsibility rdf:type owl:ObjectProperty ;
    rdfs:domain :Role ;
    rdfs:range :ProfessionalResponsibility ;
    rdfs:label "has responsibility"@en ;
    rdfs:comment "Relates a role to responsibilities it entails"@en .

# Properties for Conditions
:severity rdf:type owl:DatatypeProperty ;
    rdfs:domain :Condition ;
    rdfs:range xsd:integer ;
    rdfs:label "severity"@en ;
    rdfs:comment "Indicates the severity level of a condition (1-10)"@en .

:location rdf:type owl:DatatypeProperty ;
    rdfs:domain :Condition ;
    rdfs:range xsd:string ;
    rdfs:label "location"@en ;
    rdfs:comment "Indicates the location where a condition applies"@en .

:duration rdf:type owl:DatatypeProperty ;
    rdfs:domain :Condition ;
    rdfs:range xsd:duration ;
    rdfs:label "duration"@en ;
    rdfs:comment "Indicates how long a condition persists"@en .

# Properties for Resources
:quantity rdf:type owl:DatatypeProperty ;
    rdfs:domain :Resource ;
    rdfs:range xsd:integer ;
    rdfs:label "quantity"@en ;
    rdfs:comment "Indicates the quantity of a resource"@en .

:resourceOwner rdf:type owl:ObjectProperty ;
    rdfs:domain :Resource ;
    rdfs:range :Agent ;
    rdfs:label "resource owner"@en ;
    rdfs:comment "Indicates who owns or controls a resource"@en .

:resourceValue rdf:type owl:DatatypeProperty ;
    rdfs:domain :Resource ;
    rdfs:range xsd:string ;
    rdfs:label "resource value"@en ;
    rdfs:comment "Indicates the importance or value of a resource"@en .

# Properties for Events
:eventSeverity rdf:type owl:DatatypeProperty ;
    rdfs:domain :Event ;
    rdfs:range xsd:integer ;
    rdfs:label "event severity"@en ;
    rdfs:comment "Indicates the severity or impact level of an event"@en .

:eventLocation rdf:type owl:DatatypeProperty ;
    rdfs:domain :Event ;
    rdfs:range xsd:string ;
    rdfs:label "event location"@en ;
    rdfs:comment "Indicates where an event takes place"@en .

:eventDuration rdf:type owl:DatatypeProperty ;
    rdfs:domain :Event ;
    rdfs:range xsd:duration ;
    rdfs:label "event duration"@en ;
    rdfs:comment "Indicates how long an event lasts"@en .

# Properties for Actions
:actionPriority rdf:type owl:DatatypeProperty ;
    rdfs:domain :Action ;
    rdfs:range xsd:integer ;
    rdfs:label "action priority"@en ;
    rdfs:comment "Indicates the priority level of an action"@en .


:actionDuration rdf:type owl:DatatypeProperty ;
    rdfs:domain :Action ;
    rdfs:range xsd:duration ;
    rdfs:label "action duration"@en ;
    rdfs:comment "Indicates how long an action takes"@en .


:actionAgent rdf:type owl:ObjectProperty ;
    rdfs:domain :Action ;
    rdfs:range :Agent ;
    rdfs:label "action agent"@en ;
    rdfs:comment "Indicates who performs an action"@en .

# Properties for Decisions
:decisionImpact rdf:type owl:DatatypeProperty ;
    rdfs:domain :Decision ;
    rdfs:range xsd:string ;
    rdfs:label "decision impact"@en ;
    rdfs:comment "Describes the impact or consequences of a decision"@en .

:decisionCriteria rdf:type owl:DatatypeProperty ;
    rdfs:domain :Decision ;
    rdfs:range xsd:string ;
    rdfs:label "decision criteria"@en ;
    rdfs:comment "Factors considered in making a decision"@en .

:decisionAlternatives rdf:type owl:DatatypeProperty ;
    rdfs:domain :Decision ;
    rdfs:range xsd:string ;
    rdfs:label "decision alternatives"@en ;
    rdfs:comment "Alternative options considered in the decision"@en .

# Relationship Properties
:involves rdf:type owl:ObjectProperty ;
    rdfs:label "involves"@en ;
    rdfs:comment "General relation indicating involvement between entities"@en .

:precedes rdf:type owl:ObjectProperty ;
    rdfs:subPropertyOf bfo:BFO_0000062 ; # preceded by (inverse)
    rdfs:label "precedes"@en ;
    rdfs:comment "Indicates temporal precedence between processes"@en .

:resultsIn rdf:type owl:ObjectProperty ;
    rdfs:domain :Action ;
    rdfs:label "results in"@en ;
    rdfs:comment "Indicates a causal relationship where an action results in something"@en .

:participatesIn rdf:type owl:ObjectProperty ;
    rdfs:domain :Agent ;
    rdfs:range bfo:BFO_0000015 ; # process
    rdfs:label "participates in"@en ;
    rdfs:comment "Relates an agent to a process they participate in"@en .

:hasRole rdf:type owl:ObjectProperty ;
    rdfs:domain :Agent ;
    rdfs:range :Role ;
    rdfs:label "has role"@en ;
    rdfs:comment "Relates an agent to a role they have"@en .

:usesResource rdf:type owl:ObjectProperty ;
    rdfs:domain :Action ;
    rdfs:range :Resource ;
    rdfs:label "uses resource"@en ;
    rdfs:comment "Relates an action to resources it uses"@en .

:hasCondition rdf:type owl:ObjectProperty ;
    rdfs:range :Condition ;
    rdfs:label "has condition"@en ;
    rdfs:comment "Relates an entity to conditions that apply to it"@en .

:requiresDecision rdf:type owl:ObjectProperty ;
    rdfs:domain :EthicalDilemma ;
    rdfs:range :Decision ;
    rdfs:label "requires decision"@en ;
    rdfs:comment "Relates an ethical dilemma to the decision it requires"@en .
